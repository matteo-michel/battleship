<div class="main">
@if (grid is null){
    <p>Loading...</p>
  }
  else{
<div class="grid">
    @for (int i = 0; i < 10; i++)
    {
        @for (int j = 0; j < 10; j++)
        {
          int row = i;
          int col = j;
          string data = grid[row,col];
          Console.WriteLine(data);
            <div class="cell">@data</div>
